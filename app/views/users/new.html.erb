<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Create User</h1>
        <%= link_to 'Back to Users', users_path, class: 'btn btn-secondary' %>
    </div>
    <div class="card p-4 shadow-sm rounded bg-light">
        <%= simple_form_for @user do |f| %>
            <div class="mb-3">
                <%= f.input :firstName, label: 'First Name', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="mb-3">
                <%= f.input :lastName, label: 'Last Name', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="mb-3">
                <%= f.input :email, label: 'Email', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="mb-3">
                <%= f.input :phoneNumber, label: 'Phone Number', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="d-flex justify-content-end">
                <%= f.button :submit, 'Create User', class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
