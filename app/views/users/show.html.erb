<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">User Details</h1>
        <%= link_to 'Back to Users', users_path, class: 'btn btn-secondary' %>
    </div>

  <div class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
      <label class="form-label fw-bold">First Name:</label>
      <div class="form-control-plaintext"><%= @user.firstName %></div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">Last Name:</label>
      <div class="form-control-plaintext"><%= @user.lastName %></div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">Email:</label>
      <div class="form-control-plaintext"><%= @user.email %></div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">Phone Number:</label>
      <div class="form-control-plaintext"><%= @user.phoneNumber %></div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
      <%= form_with(url: user_path(@user), method: :delete, class: 'd-inline') do %>
        <%= submit_tag 'Delete', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
