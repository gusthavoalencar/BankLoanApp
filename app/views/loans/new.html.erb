<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Create Loan</h1>
        <%= link_to 'Back to Loans', loans_path, class: 'btn btn-secondary' %>
    </div>
    <div class="card p-4 shadow-sm rounded bg-light">
        <%= simple_form_for @loan do |f| %>
            <div class="mb-3">
                <%= f.input :amount, label: 'Loan Amount', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="mb-3">
                <%= f.input :interest_rate, label: 'Interest Rate (%)', input_html: { class: 'form-control' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="mb-3">
                <%= f.hidden_field :status, value: 'Pending' %>
            </div>
            <div class="mb-3">
                <%= f.input :user_id, label: 'User', collection: User.all.collect { |u| [u.firstName + ' ' + u.lastName, u.id] }, prompt: 'Select User', input_html: { class: 'form-select' }, label_html: { class: 'form-label fw-bold' } %>
            </div>
            <div class="d-flex justify-content-end">
                <%= f.button :submit, 'Create Loan', class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
