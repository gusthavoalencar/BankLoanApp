<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Loan Details</h1>
        <%= link_to 'Back to Loans', loans_path, class: 'btn btn-secondary' %>
    </div>

  <div class="p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
      <label class="form-label fw-bold">Amount:</label>
      <div class="form-control-plaintext"><%= number_to_currency(@loan.amount) %></div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">Interest Rate:</label>
      <div class="form-control-plaintext"><%= @loan.interest_rate %> %</div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">Status:</label>
      <div class="form-control-plaintext"><%= @loan.status.capitalize %></div>
    </div>
    <hr>

    <div class="mb-3">
      <label class="form-label fw-bold">User:</label>
      <div class="form-control-plaintext"><%= @loan.user.firstName + ' ' + @loan.user.lastName %></div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
      <%= link_to 'Edit', edit_loan_path(@loan), class: 'btn btn-primary' %>
      <%= form_with(url: loan_path(@loan), method: :delete, class: 'd-inline') do %>
        <%= submit_tag 'Delete', class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
